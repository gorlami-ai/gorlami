{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gorlami",
  "version": "0.1.0",
  "identifier": "com.gorlami.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns"],
    "createUpdaterArtifacts": true,
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "signingIdentity": null,
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg2QjU3RENDOTE1QkE5NDEKUldSQnFWdVJ6SDIxaHNJaXlCNEJ1S1VIVjF0Q0JxNVk3c2xwb0g5clRVbjBxSDQ2L1JPY0N6Q2gK",
      "endpoints": [
        "https://releases.gorlami.com/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}
