# Gorlami Backend Configuration
# Copy this file to .env and fill in your API keys

# Environment (development, staging, production)
ENVIRONMENT="development"

# Server Configuration
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
SERVER_URL="ws://localhost:8000/ws/transcribe"

# Required API Keys
DEEPGRAM_API_KEY="xxx"
AZURE_OPENAI_ENDPOINT_URL="https://xx.openai.azure.com/"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4o-mini"
AZURE_OPENAI_API_KEY="xx"

# Supabase Configuration
SUPABASE_URL="https://xx.supabase.co"
SUPABASE_KEY="xxx"

# CORS Configuration (JSON array format)
# For production with deployed backend: ["tauri://localhost"]
# For local development: ["tauri://localhost", "http://localhost:1420"]
CORS_ORIGINS=["tauri://localhost"]